{
    "name"       : "gwa/wp-disable-auto-update",
    "type"       : "library",
    "description": "Disable auto update info from wordpress.",
    "keywords"   : [
        "wordpress, auto update, update"
    ],
    "license"    : "MIT",
    "homepage"   : "https://github.com/gwa/wp-disable-auto-update",
    "support"    : {
        "issues"      : "https://github.com/gwa/wp-disable-auto-update/issues",
        "source"      : "https://github.com/gwa/wp-disable-auto-update"
    },
    "authors"    : [
        {
            "name"    : "Daniel Bannert",
            "email"   : "bannert@greatwhiteark.com",
            "homepage": "http://greatwhiteark.com",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"                                           : ">=5.5.9",
        "gwa/mockery-wp-bridge"                         : "^1.1@dev"
    },
    "require-dev": {
        "fabpot/php-cs-fixer"                           : "~1.10",
        "mockery/mockery"                               : "~0.9.4",
        "phpunit/phpunit"                               : "~4.8.8",
        "scrutinizer/ocular"                            : "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Gwa\\Wordpress\\DisableAutoUpdate\\"       : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gwa\\Wordpress\\DisableAutoUpdate\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master"                                : "1.0.0-dev"
        }
    },
    "scripts": {
        "test"                                          : "phpunit",
        "check-cs"                                      : "php-cs-fixer.phar fix -v --dry-run",
        "fix-cs"                                        : "php-cs-fixer.phar fix"
    },
    "suggest": {
    },
    "minimum-stability"                                 : "dev",
    "prefer-stable"                                     : true
}
